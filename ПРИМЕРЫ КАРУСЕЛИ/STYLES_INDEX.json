      "POSE": "Person pose description",
      "EMOTION": "Person emotion description",
      "PROPS": "Props/objects in scene",
      "CONTENT_LAYOUT": "Content layout description"
    },
    
    "prompt_block_assembly": {
      "HOOK_slide": [
        "background",
        "cards_headline (with HEADLINE_1, HEADLINE_2)",
        "person_hook (with POSE, EMOTION)",
        "decorations_hook (with PROPS)",
        "style_footer"
      ],
      "CONTENT_slide": [
        "background",
        "cards_content",
        "CONTENT_LAYOUT",
        "style_footer"
      ],
      "CTA_slide": [
        "background",
        "person_cta",
        "cta_card (with PRODUCT_CODE)",
        "style_footer"
      ],
      "VIRAL_slide": [
        "background or custom gradient",
        "viral_elements",
        "style_footer"
      ]
    }
  },
  
